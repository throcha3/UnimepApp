<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="6dp"
    android:padding="6dp">

    <TextView
        android:id="@+id/txt_nome_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Curso"
        android:textStyle="bold"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/txt_facul"
        android:layout_below="@id/txt_nome_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Faculdade:"
        android:textSize="14dp"/>
    <TextView
        android:id="@+id/txt_semestres"
        android:layout_below="@id/txt_nome_curso"
        android:layout_toStartOf="@id/imageview_detalhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textSize="14dp"
        android:text="Semestres:"/>
    <ImageView
        android:id="@+id/imageview_detalhe"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:src="@drawable/ic_navigate_next"/>

</RelativeLayout>