<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.thdev.unimep">

    <application
        android:name=".UnimepApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NavDrawer">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.ListaActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.DetalheActivity"
            android:parentActivityName=".activity.ListaActivity" />
        <activity
            android:name=".activity.AgendaActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.ConsultaAgendaActivity"></activity>
    </application>

</manifest>